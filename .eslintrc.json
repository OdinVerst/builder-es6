{
	"extends": ["airbnb", "prettier"],
	"plugins": ["prettier", "jest"],
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "warn",
		"no-console": "warn",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "off",
		"class-methods-use-this": "off"
	},
	"env": {
		"browser": true,
		"node": true,
		"jest/globals": true
	},
	"globals": {
		"window": true,
		"document": true,
		"Swiper": true,
		"fetch": true
	}
}
